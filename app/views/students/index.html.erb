<div class="row">
  <div class="col s12">
    <h2 class="center-align">Student Listing</h2>
  </div>
</div>

<div class="row">
  <% @students.each do |student| %>
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><strong>Name: </strong><%= student.name %></span>
          <span class="card-title"><small><strong>Email: </strong><%= student.email %></span></small>
          <p><%= 'Registered ' + time_ago_in_words(student.created_at) %></p>
        </div>
        <div class="card-action">
          <%= link_to 'PROFILE', student_path(student) %>
        </div>
      </div>
    </div>
  <% end %>
</div>
