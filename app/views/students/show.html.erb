<div class="row sign-up-form">
  <div class="col s5 m5">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><strong>Name: </strong><%= @student.name %></span>
        <span class="card-title"><small><strong>Email: </strong><%= @student.email %></span></small>
        <p><%= 'Registered ' + time_ago_in_words(@student.created_at) %></p>
      </div>
    </div>
    <% if current_user == @student %>
      <%= link_to 'Edit Profile<i class="material-icons right">create</i>'.html_safe,
        edit_student_path(@student), class: 'waves-effect waves-light btn' %>
    <% end %>
  </div>

  <div class="col s7 m7">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><strong>Courses:</span>
        <% if @student.courses.empty? %>
          None
        <% else %>
          <ul>
            <% @student.courses.each do |course| %>
              <li><%= course.course_code %>: <%= course.name %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>
