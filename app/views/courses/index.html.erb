<div class="row">
  <div class="col s12">
    <h2 class="center-align">Course Listing</h2>
  </div>
</div>

<div class="row">
  <% Course.all.each do |course| %>
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= course.course_code %>: <%= course.name %></span>
          <p><%= course.description %></p>
        </div>
        <div class="card-action">
          <a href="#">ENROLL</a>
          <a href="#">INFO</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
