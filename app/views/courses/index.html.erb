<div class="row">
  <div class="col s12">
    <h2 class="center-align">Course Listing</h2>
  </div>
</div>

<div class="row">
  <% @courses.each do |course| %>
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= course.course_code %>: <%= course.name %></span>
          <p><%= course.description %></p>
        </div>
        <div class="card-action">
          <% if user_signed_in? && !current_user.courses.include?(course) %>
            <%= link_to 'ENROLL', course_enroll_path(course_id: course.id), method: :post %>
          <% end %>
          <%= link_to 'INFO', '#' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
